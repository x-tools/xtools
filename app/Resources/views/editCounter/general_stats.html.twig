                <td><span class="tdgeneral" >@TODO</span></td>
                <td class="tdnum"><small> @TODO days</small></td>
            </tr>
            <tr>
                <th>{{ msg('sul-total-edits') }}</th>
                <td><span class="tdgeneral">@TODO sul-total</span></td>
            </tr>
